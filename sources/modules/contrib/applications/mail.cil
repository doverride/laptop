(macro mail_role_template_mutt ((role ARG1)(type ARG2)(type ARG3))
    (call auto_subject_type_transition_pattern
        (ARG2 mutt_exec_t ARG3))
    (roletype ARG1 ARG3)
    (allow ARG3 ARG2 (process (signal)))
    (call mail_mutt_subject_type (ARG3))
    (optional mail_role_template_mutt_optional_firefox
        (call firefox_run (ARG3 ARG1))
        (call firefox_run_xremotec (ARG3 ARG1))))

